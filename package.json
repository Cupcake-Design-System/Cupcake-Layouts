{
  "name": "@cupcake-ds/cupcake-layouts",
  "banner_name": "Cupcake Layouts",
  "version": "0.1.0",
  "scripts": {
    "clean": "rimraf dist/{css/*,js/*,images/*}",
    "test": "mocha test",
    "autoprefixer": "postcss -u autoprefixer -r dist/assets/css/*",
    "get-tokens": "copyfiles -f node_modules/@cupcake-ds/cupcake-sprinkles/dist/_tokens.scss src/scss",
    "lint": "stylelint src/scss/ --syntax scss || true --fix",
    "scss:core": "node-sass --source-map-embed --source-map-contents --output-style expanded -o dist/css src/scss/style.scss",
    "serve": "browser-sync start --server './' --files \"dist/assets/css/*.css, dist/assets/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:css": "run-s lint scss:*",
    "build": "run-s build:*",
    "watch:css": "onchange \"src/scss\" -- run-s build:css",
    "watch": "run-p watch:*",
    "start": "run-p serve watch",
    "postinstall": "run-s get-tokens",
    "precommit": "lint-staged && npm run lint"
  },
  "browserslist": [
    "> 2%",
    "IE 10"
  ],
  "lint-staged": {
    "*.scss": "stylelint --syntax=scss"
  },
  "devDependencies": {
    "autoprefixer": "^9.2.1",
    "@cupcake-ds/cupcake-sprinkles": "^0.2.3",
    "browser-sync": "^2.26.3",
    "clean-css-cli": "^4.2.1",
    "group-css-media-queries": "^1.4.1",
    "lint-staged": "^7.3.0",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.4",
    "npm-run-all": "^4.1.3",
    "onchange": "^5.0.2",
    "postcss-cli": "^6.0.1",
    "rimraf": "^2.6.2",
    "sass-true": "^4.0.0",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-declaration-strict-value": "^1.0.4",
    "stylelint-scss": "^3.3.1",
    "copyfiles": "^2.1.0"
  }
}
