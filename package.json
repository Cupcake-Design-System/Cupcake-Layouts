{
  "name": "@cupcake-ds/cupcake-layouts",
  "banner_name": "Cupcake Layouts",
  "version": "0.1.0",
  "scripts": {
    "clean": "rimraf dist/{css/*,js/*,images/*}",
    "test": "mocha test",
    "copy-tokens": "copyfiles -f ./node_modules/@cupcake-ds/cupcake-sprinkles/dist/*.scss src/scss && echo 'Tokens copied.'",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "scss": "node-sass --output-style compressed -o dist/css src/scss/main.scss",
    "lint-scss": "stylelint src/scss/*.scss !src/scss/_old.scss --syntax scss || true",
    "group": "group-css-media-queries dist/cupcake.css dist/cupcake.css",
    "min-css": "cleancss -o dist/cupcake.min.css dist/cupcake.css",
    "prodcss": "run-s group min-css",
    "uglify": "mkdirp dist/js -p && uglifyjs src/js/*.js -m -o dist/js/app.js && uglifyjs src/js/*.js -m -c -o dist/js/app.min.js",
    "serve": "browser-sync start --server --files \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:css": "run-s lint-scss scss autoprefixer",
    "build:js": "run-s uglify",
    "build": "run-s build:*",
    "watch:css": "onchange \"src/scss\" -- run-s build:css",
    "watch:js": "onchange \"src/js\" -- run-s build:js",
    "watch": "run-p serve watch:*",
    "start": "run-s build watch",
    "postinstall": "run-s build watch",
    "precommit": "lint-staged && npm run lint"
  },
  "browserslist": [
    "> 2%",
    "IE 10"
  ],
  "lint-staged": {
    "*.scss": "stylelint --syntax=scss"
  },
  "devDependencies": {
    "autoprefixer": "^9.1.5",
    "@cupcake-ds/cupcake-sprinkles": "^0.2.3",
    "browser-sync": "^2.24.7",
    "clean-css-cli": "^4.2.1",
    "fabricator-assemble": "^1.2.0",
    "group-css-media-queries": "^1.4.1",
    "lint-staged": "^7.3.0",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.3",
    "onchange": "^5.0.2",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "sass-true": "^4.0.0",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-declaration-strict-value": "^1.0.4",
    "stylelint-scss": "^3.3.1"
  },
  "dependencies": {
    "copyfiles": "^2.1.0"
  }
}
